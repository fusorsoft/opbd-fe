<% layout('layouts/fullwidth2') -%>

<div class="ob-form-aligned">
	
	<div class="ob-control-group">
		<label for="username">User Name</label>
		<input type="text" id="username" value="<%= user.username %>"/>
	</div>

	<div class="ob-control-group">
		<label for="steamId">Steam Id </label>
		<input type="text" id="steamID" readonly="true" value="<%= user.steamID %>"/>
	</div>

	<div class="ob-control-group">
		<label for="emailAddress">Email Address </label>
		<input type="email" id="email" value="<%= user.email %>"/>
	</div>

	<div class="ob-controls" style="margin-top: 0.2em; margin-bottom: 0.3em;">
		<label for="contactOnLaunch" class="ob-checkbox">
			<input type="checkbox" id="contactOnLaunch" /> Contact me when Operation Breakdown launches
		</label>
	</div>

	<div class="ob-control-group">
		<label for="apiToken">API Token</label>
		<input type="text" id="apiToken" readonly="true" value="<%= user.apiToken %>"/>

		<button class="ob-button">Generate New Token</button>
	</div>
</div>

<div>
	<a class="ob-button-primary" href="/Client">Download the Client!</a>
</div>